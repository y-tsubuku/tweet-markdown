<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="text-success">Markdown has successfully tweeted!</h2>
      <br>
      <h3>You can check <%= link_to 'Your Tweet', @post.tweet_url, target: '_blank' %></h3>
      <br>
      <h4>Thanks for using <%= link_to 'tweet markdown', root_path %></h4>
      <h4>If you have any questions, please contact <a href="https://twitter.com/y_tsubuku">me</a></h4>
    </div>
    <div class="col-md-6" style="border-left: 1px dotted darkgrey">
      <h2 class="text-warning">Preview your markdown image</h2>
      <%= link_to @post.tweet_url, target: '_blank' do %>
        <%= image_tag @post.tweet_image_url, class: 'img-fluid z-depth-1' %>
      <% end %>
    </div>
  </div>
</div>
